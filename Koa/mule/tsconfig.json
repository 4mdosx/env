{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "paths": {
        "@/*": [
            "*"
        ]
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
